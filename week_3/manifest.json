{
    "manifest_version": 3,
    "name": "Shopping Comparison Agent",
    "version": "1.0",
    "description": "An AI-powered shopping comparison tool that helps you make informed purchase decisions",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://*.amazon.com/*",
        "https://*.walmart.com/*",
        "https://*.bestbuy.com/*",
        "https://api.openai.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}